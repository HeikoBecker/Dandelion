val tobl_def = new_specification(
  "tobl_def", ["tobl"],
  numeralTheory.bit_initiality
    |> INST_TYPE [alpha |-> “:bool -> bool list”]
    |> SPECL [“λb:bool. if b then [] else [T]”,
